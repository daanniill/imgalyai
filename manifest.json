{
    "manifest_version": 3,
    "name": "imgally.ai",
    "version" : "1.0.0",
    "description" : "Powerful AI tools and Quick Access. Analyze any images with just one screenshot.",
    "permissions": ["storage", "activeTab", "background"],
    "host_permissions": ["http://localhost:5000/*"],
    "action":{
        "default_popup": "templates/popup.html",
        "default_icon": "static/images/icon.png"
    },
    "icons": {
        "16": "static/images/icon.png",
        "48": "static/images/icon.png",
        "128": "static/images/icon.png"
    }
}